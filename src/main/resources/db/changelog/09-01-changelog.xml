<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1736352246561-1" author="idohyeon">
        <createTable ifNotExists="true" tableName="article_keywords">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_article_keywords"/>
            </column>
            <column name="article_id" type="BIGINT"/>
            <column name="keyword_id" type="BIGINT"/>
            <column name="relevance_score" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1736352246561-2" author="idohyeon">
        <createTable ifNotExists="true" tableName="articles">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_articles"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="source_url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="publish_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="crawled_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1736352246561-3" author="idohyeon">
        <createTable ifNotExists="true" tableName="keywords">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_keywords"/>
            </column>
            <column name="word" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1736352246561-4" author="idohyeon">
        <createTable ifNotExists="true" tableName="user_keywords">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_keywords"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="keyword_id" type="BIGINT"/>
            <column name="date_added" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="notification_enabled" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="1736352246561-5" author="idohyeon">
        <createTable ifNotExists="true" tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1736352246561-6" author="idohyeon">
        <addUniqueConstraint columnNames="word" constraintName="uc_keywords_word" tableName="keywords"/>
    </changeSet>
    <changeSet id="1736352246561-7" author="idohyeon">
        <addUniqueConstraint columnNames="username" constraintName="uc_users_username" tableName="users"/>
    </changeSet>
    <changeSet id="1736352246561-8" author="idohyeon">
        <addForeignKeyConstraint baseColumnNames="article_id" baseTableName="article_keywords"
                                 constraintName="FK_ARTICLE_KEYWORDS_ON_ARTICLE" referencedColumnNames="id"
                                 referencedTableName="articles"/>
    </changeSet>
    <changeSet id="1736352246561-9" author="idohyeon">
        <addForeignKeyConstraint baseColumnNames="keyword_id" baseTableName="article_keywords"
                                 constraintName="FK_ARTICLE_KEYWORDS_ON_KEYWORD" referencedColumnNames="id"
                                 referencedTableName="keywords"/>
    </changeSet>
    <changeSet id="1736352246561-10" author="idohyeon">
        <addForeignKeyConstraint baseColumnNames="keyword_id" baseTableName="user_keywords"
                                 constraintName="FK_USER_KEYWORDS_ON_KEYWORD" referencedColumnNames="id"
                                 referencedTableName="keywords"/>
    </changeSet>
    <changeSet id="1736352246561-11" author="idohyeon">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_keywords"
                                 constraintName="FK_USER_KEYWORDS_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>